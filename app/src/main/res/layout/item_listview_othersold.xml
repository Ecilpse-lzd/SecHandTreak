<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="126.0dip"
            android:layout_height="126.0dip">

            <ImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="126.0dip"
                android:layout_height="126.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/goods_default" />

            <ImageView
                android:id="@+id/img_have_sold"
                android:layout_width="96.0dip"
                android:layout_height="90.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="18.0dip"
                android:src="@drawable/my_favourite_have_sold"
                android:visibility="invisible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="8.0dip"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:text="小米手机，挥泪转让啦。你值得拥有。"
                android:textColor="@color/main_blackgray"
                android:textSize="@dimen/font_bigmiddle" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:text="交易成功"
                        android:textColor="#ff838383"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:paddingRight="6.0dip">

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥1000"
                        android:textColor="#ffff4040"
                        android:textSize="14.0dip" />

                    <TextView
                        android:id="@+id/tv_goods_originprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="原价：1800"
                        android:textColor="@color/main_gray"
                        android:textSize="8.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>