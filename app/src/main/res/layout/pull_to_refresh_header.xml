<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_refresh_header_content"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pull_refresh_header_height"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pull_header"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:src="@anim/frame_pull_loading_header" />

    <TextView
        android:id="@+id/pull_header_hint_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:text="下拉刷新"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/font_middle" />
</LinearLayout>