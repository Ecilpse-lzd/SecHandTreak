<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_card_photo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_loadingbg"
    android:clickable="true"
    android:visibility="visible">

    <ImageView
        android:id="@+id/ib_photo_close"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="right"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:padding="5.0dip"
        android:src="@drawable/close_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo_camera"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:src="@drawable/selling_camera" />

        <ImageView
            android:id="@+id/iv_photo_gallery"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:layout_marginTop="40.0dip"
            android:src="@drawable/selling_gallery" />
    </LinearLayout>
</FrameLayout>