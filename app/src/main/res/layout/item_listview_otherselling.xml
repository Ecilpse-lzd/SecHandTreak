<?xml version="1.0" encoding="utf-8"?>
<!--出售界面list-item-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_item_sell_clock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="126.0dip"
            android:layout_height="126.0dip">

            <ImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="126.0dip"
                android:layout_height="126.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/goods_default" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="7.0dip"
            android:paddingLeft="6.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="7.0dip">

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32.0dip"
                        android:layout_height="32.0dip"
                        android:layout_marginBottom="4.0dip"
                        android:src="@color/main_red"
                        />

                    <ImageView
                        android:id="@+id/iv_goods_header"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_margin="1.0dip"
                        android:src="@drawable/header_default"
                        />

                    <ImageView
                        android:id="@+id/goodsselling_item_auth"
                        android:layout_width="29.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="bottom"
                        android:src="@drawable/userinfo_auth"
                        android:visibility="visible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_goods_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginTop="6.0dip"
                        android:singleLine="true"
                        android:text="隔壁老王"
                        android:textColor="@color/main_blackgray"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/tv_goods_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6.0dip"
                        android:text="出售小米手机"
                        android:textColor="#ffff4040"
                        android:textSize="@dimen/font_tiny" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_content"
                android:layout_width="fill_parent"
                android:layout_height="38.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginTop="3.0dip"
                android:maxLines="2"
                android:text="小米手机，挥泪转让啦。\n你值得拥有\n，手快有手慢无啦"
                android:textColor="@color/main_blackgray"
                android:textSize="@dimen/font_bigmiddle" />

            <View style="@style/ExpandBlank" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|right"
                android:layout_marginBottom="0.0dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="￥1000"
                    android:textColor="@color/main_red"
                    android:textSize="@dimen/font_bigmiddle" />

                <TextView
                    android:id="@+id/tv_goods_originprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3.0dip"
                    android:text="原价：1800"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/font_s_tinysmall" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>