<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/main_bgcolor"
    android:orientation="vertical"
    android:paddingBottom="4.0dip"
    android:paddingLeft="2.0dip"
    android:paddingRight="2.0dip">

    <ImageView
        android:id="@id/iv_goods_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_goods_size"
        android:scaleType="centerCrop"
        android:src="@drawable/goods_default" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_white"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_goods_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="4.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="五元一本北京地区可当面交易"
            android:textColor="@color/main_black"
            android:textSize="@dimen/font_middle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.0dip"
            android:layout_marginTop="8.0dip"
            android:orientation="horizontal"
            android:paddingLeft="3.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@id/tv_goods_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="海淀区"
                android:textColor="@color/main_dimgray"
                android:textSize="@dimen/font_tiny" />

            <TextView
                android:id="@id/tv_goods_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="￥200.00"
                android:textColor="@color/main_red_price"
                android:textSize="@dimen/font_middlesmall" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>