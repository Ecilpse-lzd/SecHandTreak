<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="10.0dip">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/are_you_here"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_bigmiddle" />

            <TextView
                android:id="@+id/address_location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center_vertical"
                android:minLines="2"
                android:text="北京 北京市 海淀区 \n成府路"
                android:textColor="@color/main_blackgray"
                android:textSize="@dimen/font_bigmiddle" />
        </LinearLayout>

        <com.erhuoapp.erhuo.view.custom.RoundButton
            android:id="@+id/address_location_ok"
            android:layout_width="105.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:text="使用"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_middlesmall"
            app:roundBackground="@drawable/select_red_dimred"
            app:roundSize="2.0dip" />
    </LinearLayout>

    <ImageView
        android:id="@+id/address_location_cancel"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="right"
        android:layout_margin="3.0dip"
        android:padding="3.0dip"
        android:src="@drawable/close_bg" />
</FrameLayout>