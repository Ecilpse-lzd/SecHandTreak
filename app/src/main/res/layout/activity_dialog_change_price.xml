<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogLayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15.0dip"
        android:paddingTop="15.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:text="修改当前商品价格"
            android:textColor="@color/main_blackgray"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip"
                        android:text="当前价格:"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_middlesmall" />

                    <TextView
                        android:id="@+id/change_price_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:maxLength="6"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip"
                        android:text="23"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/font_middlesmall" />
                </LinearLayout>

                <TextView
                    android:id="@id/dialog_cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/round_box"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/main_red"
                    android:textSize="@dimen/font_large"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/change_price_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="输入修改后的价格"
                    android:numeric="integer"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip"
                    android:textColor="@color/main_red"
                    android:textSize="@dimen/font_middlesmall" />

                <TextView
                    android:id="@id/dialog_ok"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@color/main_red"
                    android:gravity="center"
                    android:text="@string/yes"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>