<?xml version="1.0" encoding="utf-8"?>
<!--求购界面list-item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/item_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:orientation="vertical"
    android:paddingBottom="10.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="11.0dip"
    android:paddingTop="10.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.erhuoapp.erhuo.view.custom.RoundImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:layout_marginBottom="4.0dip"
                android:src="@color/main_red"
                app:roundSize="16.0dip" />

            <com.erhuoapp.erhuo.view.custom.RoundImageView
                android:id="@+id/iv_goods_header"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_margin="1.0dip"
                android:src="@drawable/header_default"
                />

            <ImageView
                android:id="@+id/goodsselling_item_auth"
                android:layout_width="29.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="bottom"
                android:src="@drawable/userinfo_auth"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="求小米四手机"
            android:textColor="@color/main_red"
            android:textSize="@dimen/font_large" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:id="@id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="￥900"
            android:textColor="@color/main_red"
            android:textSize="@dimen/font_big" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_goods_content"
            android:layout_width="0.0dip"
            android:layout_height="38.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1.0"
            android:maxLines="2"
            android:text="不要太贵，\n毕竟还是学生"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/font_middle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_goods_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginTop="-2.0dip"
                android:text="10分钟前"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/font_tiny" />

            <TextView
                android:id="@id/tv_goods_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginTop="1.0dip"
                android:text="300米"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/font_tiny" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>