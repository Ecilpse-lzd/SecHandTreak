<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:orientation="horizontal"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="6.0dip">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip">

        <com.erhuoapp.erhuo.view.custom.RoundImageView
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:src="@color/main_red"
            app:roundSize="16.0dip" />

        <com.erhuoapp.erhuo.view.custom.RoundImageView
            android:id="@+id/iv_comment_header"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="1.0dip"
            android:src="@drawable/header_default"
            app:roundSize="15.0dip" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.erhuoapp.erhuo.view.custom.RoundButton
                android:layout_width="14.0dip"
                android:layout_height="11.0dip"
                android:text="认证"
                android:textSize="6.0dip"
                android:visibility="gone"
                app:roundBackground="@color/main_red"
                app:roundSize="1.0dip" />

            <TextView
                android:id="@+id/tv_comment_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/main_red"
                android:textSize="@dimen/font_middlesmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:text="content"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/font_middlesmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="32.0dip"
        android:layout_marginLeft="15.0dip"
        android:gravity="center_vertical"
        android:text="22小时"
        android:textColor="@color/main_red"
        android:textSize="@dimen/font_middlesmall" />
</LinearLayout>