<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@drawable/rect_white_four_corner"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white_four_corner"
            android:padding="2.0dip">

            <com.erhuoapp.erhuo.view.custom.RoundImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/home_goods_size"
                android:scaleType="centerCrop"
                android:src="@drawable/goods_default"
                app:roundSize="5.0dip" />
        </FrameLayout>

        <ImageView
            android:id="@+id/img_goods_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|top"
            android:src="@drawable/home_goods_discount" />

        <include layout="@layout/label_for_goods" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="4.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="五元一本北京地区可当面交易"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/font_big" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="￥200.00"
            android:textColor="@color/main_red_price"
            android:textSize="@dimen/font_big" />

        <TextView
            android:id="@+id/tv_goods_price_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:singleLine="true"
            android:text="￥2200.00"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/font_big" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="2.0dip"
        android:orientation="horizontal"
        android:paddingLeft="3.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:id="@+id/tv_goods_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:singleLine="true"
            android:text="海淀区"
            android:textColor="@color/main_orange_color"
            android:textSize="@dimen/font_middle" />
    </LinearLayout>
</LinearLayout>