<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_imgview_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="135.0dip"
                android:scaleType="centerCrop" />

            <com.erhuoapp.erhuo.view.custom.EdgingButton
                android:id="@+id/tx_go_to_weeklyselected"
                android:layout_width="155.0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="bottom|center"
                android:alpha="0.8"
                android:background="@color/main_white"
                android:text="我要上精选"
                android:textColor="@color/main_black"
                android:textSize="@dimen/font_middle"
                app:edgeColor="@color/main_gray"
                app:edgeSize="1.0dip"
                app:roundSize="2.0dip" />
        </FrameLayout>

        <TextView
            android:id="@+id/activity_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_red"
            android:clickable="false"
            android:gravity="center"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="10.0dip"
            android:text=""
            android:textColor="@color/main_black"
            android:textSize="11.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:clickable="false" />
    </LinearLayout>
</LinearLayout>