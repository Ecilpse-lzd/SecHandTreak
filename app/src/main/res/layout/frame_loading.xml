<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_frame_loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bgcolor"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    >


    <ImageView
        android:id="@+id/is_loading"
        android:layout_width="117.0dip"
        android:layout_height="188.0dip"
        android:src="@anim/frame_loading_new" />


    <ImageView
        android:id="@+id/is_load_error"
        android:layout_width="92.0dip"
        android:layout_height="143.0dip"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/fail_noresult" />

    <TextView
        android:id="@+id/textview_frame_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:text="正在努力加载中.."
        android:textColor="@color/main_gray"
        android:textSize="@dimen/font_small" />
</LinearLayout>