<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout style="@style/FrameTitleWhite">

                <ImageView
                    android:id="@+id/img_return"
                    style="@style/FrameTitleButtonLeft"
                    android:src="@drawable/left_arrow_gray" />

                <TextView
                    style="@style/FrameTitleText"
                    android:text="邀请奖励" />
            </FrameLayout>

            <View style="@style/ShadowTitle" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="200.0dip">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recommand_share_atmos" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20.0dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/recommand_share_head" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10.0dip"
                        android:text="贰货"
                        android:textColor="@color/main_blackgray"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tx_des"
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20.0dip"
                android:gravity="center|left"
                android:singleLine="false"
                android:text="@string/share_freind"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/font_tinysmall" />

            <FrameLayout
                android:layout_width="230.0dip"
                android:layout_height="100.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="30.0dip">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="90.0dip"
                    android:layout_marginTop="11.0px"
                    android:background="@drawable/rect_shade" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="90.0dip"
                    android:background="@drawable/round_rectangle_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10.0dip"
                    android:text="长按复制您的邀请码"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/font_small" />

                <com.erhuoapp.erhuo.view.custom.EdgingButton
                    android:id="@+id/my_invite_code"
                    android:layout_width="188.0dip"
                    android:layout_height="25.0dip"
                    android:layout_gravity="center"
                    android:text="***"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/font_middlesmall"
                    app:edgeColor="@color/main_gray"
                    app:edgeSize="1.0dip"
                    app:roundSize="2.0dip" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:orientation="horizontal">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="48.0dip"
                    android:layout_marginTop="6.0dip"
                    android:layout_weight="1.0"
                    android:background="@color/main_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:text="分享"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/font_small" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="48.0dip"
                    android:layout_marginTop="6.0dip"
                    android:layout_weight="1.0"
                    android:background="@color/main_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/share_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60.0dip"
                        android:src="@drawable/share_wx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center|right"
                        android:layout_marginRight="20.0dip"
                        android:text="微信"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/share_wb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:src="@drawable/share_wb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="微博"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/share_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60.0dip"
                        android:src="@drawable/share_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20.0dip"
                        android:text="QQ"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/my_invited_freinds_radish_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:text="成功邀请好友数量，获得的萝卜数量"
                android:textColor="#ffffcc66"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>