<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/item_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="126.0dip"
            android:layout_height="126.0dip">

            <ImageView
                android:id="@id/iv_goods_image"
                android:layout_width="126.0dip"
                android:layout_height="126.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/goods_default" />

            <ImageView
                android:id="@id/img_have_sold"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/main_alphablack"
                android:src="@drawable/my_favourite_have_sold"
                android:visibility="invisible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="8.0dip"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:paddingTop="10.0dip">

            <LinearLayout
                android:id="@+id/goods_price_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32.0dip"
                        android:layout_height="32.0dip"
                        android:layout_marginBottom="4.0dip"
                        android:src="@color/main_red"
                       />

                    <ImageView
                        android:id="@id/iv_goods_header"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_margin="1.0dip"
                        android:src="@drawable/header_default"
                        />

                    <ImageView
                        android:id="@id/ll_goods_authinfo"
                        android:layout_width="29.0dip"
                        android:layout_height="20.0dip"
                        android:layout_gravity="bottom"
                        android:src="@drawable/userinfo_auth"
                        android:visibility="visible" />
                </FrameLayout>

                <TextView
                    android:id="@id/tv_goods_username"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="隔壁老王"
                    android:textColor="@color/main_blackgray"
                    android:textSize="@dimen/font_small" />


            </LinearLayout>

            <TextView
                android:id="@id/tv_goods_title"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:text="小米手机，挥泪转让啦。你值得拥有。"
                android:textColor="@color/main_blackgray"
                android:textSize="@dimen/font_bigmiddle" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/orderinfo_goods_price_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6.0dip"
                            android:text="￥99999"
                            android:textColor="@color/main_red"
                            android:textSize="@dimen/font_bigmiddle" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_goods_originprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="原价：1800"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/font_s_tinysmall" />
                </LinearLayout>

                <ImageView
                    android:id="@id/tv_goods_delete"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:padding="8.0dip"
                    android:src="@drawable/delete_red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>